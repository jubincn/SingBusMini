/**index.wxss**/

.bus-item {
  display: flex;
  flex-direction: column;
}

.bus-title {
  font: caption;
  font-size: 60rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-style: italic;
}

.bus-arrival-times {
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bus-arrival-time-item {
  background: green;
  border: grey;
  border-width: 2rpx;
  border-style: solid;
  border-radius: 10rpx;
  width: 32%;
  text-align: center;
}

.bus-arrival-time-item.empty {
  background: transparent;  
}
